{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "obsidianlabs-io/obsidian-admin-laravel",
    "type": "project",
    "description": "Obsidian Admin Laravel robust boilerplate.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "bacon/bacon-qr-code": "^3.0",
        "dedoc/scramble": "^0.13.14",
        "laravel/framework": "^12.0",
        "laravel/horizon": "^5.44",
        "laravel/pennant": "^1.19",
        "laravel/pulse": "^1.5",
        "laravel/reverb": "^1.0",
        "laravel/sanctum": "^4.3",
        "laravel/tinker": "^2.10.1",
        "pragmarx/google2fa": "^9.0"
    },
    "require-dev": {
        "deptrac/deptrac": "^4.6",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.9",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.24",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^3.8.5",
        "pestphp/pest-plugin-laravel": "^3.2",
        "phpstan/phpstan": "^2.1.32",
        "phpunit/phpunit": "11.5.50"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "setup": [
            "composer install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "@php artisan migrate --force"
        ],
        "dev": [
            "@php artisan serve"
        ],
        "analyse": [
            "@php artisan config:clear --ansi",
            "vendor/bin/phpstan analyse --memory-limit=1G"
        ],
        "quality:architecture": [
            "vendor/bin/pest tests/Architecture --colors=always",
            "vendor/bin/deptrac --config-file=deptrac.yaml --no-interaction"
        ],
        "contract:check": [
            "@php artisan config:clear --ansi",
            "@php artisan api:contract-snapshot"
        ],
        "openapi:lint": [
            "@php artisan openapi:lint"
        ],
        "security:check": [
            "@php artisan security:baseline"
        ],
        "feature:rollout": [
            "@php artisan feature:rollout"
        ],
        "profile:apply": [
            "@php artisan project:profile:apply"
        ],
        "contract:write": [
            "@php artisan api:contract-snapshot --write"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "pre-package-uninstall": [
            "Illuminate\\Foundation\\ComposerScripts::prePackageUninstall"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        },
        "platform": {
            "php": "8.2.0"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
